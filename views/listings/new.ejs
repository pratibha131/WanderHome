<% layout("/layouts/boilerplate") %>

<body>
  <div class="row">
    <div class="col-8 offset-2 mt-3">

      <h3>Create A New Listing</h3>
      <form method="post" action="/listings" novalidate class="needs-validation">
        <div class="mb-3">
          <lable for="title" class="form-label">Title</lable>
          <input
            name="listing[title]"
            placeholder="Add a catchy title"
            type="text"
            class="form-control"
            required
          />
          <div class="valid-feedback">
            Looks good!
          </div>
          
        </div>

        <div class="mb-3">
          <lable for="description" class="form-label">Description</lable>
          <textarea
            name="listing[description]"
            placeholder="enter description"
            class="form-control"
            required
          ></textarea>
          <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Description should be valid!
          </div>
        </div>

        <div class="mb-3">
          <lable for="image" class="form-label">Image</lable>
          <input
            name="listing[image]"
            placeholder="enter image URL/Link"
            type="text"
            class="form-control"
          />
        </div>

        <div class="row">
            <div class="mb-3 col-md-4">
                <lable for="price" class="form-label">Price</lable>
                <input
                  name="listing[price]"
                  placeholder="2100"
                  class="form-control"
                  required
                />
                <div class="invalid-feedback">
                  Price should be of number type!
                </div>
              </div>
      
              <div class="mb-3 col-md-8">
                <lable for="location" class="form-label">Location</lable>
                <input
                  name="listing[location]"
                  placeholder="Ludhiana , Punjab"
                  class="form-control"
                  required
                />
                <div class="invalid-feedback">
                  Location should be valid!
                </div>
              </div>
        </div>

        <div class="mb-3">
          <lable for="country" class="form-label">Country</lable>
          <input
            name="listing[country]"
            placeholder="India"
            class="form-control"
            required
          />
          <div class="invalid-feedback">
            Country should be valid
          </div>
        </div>

        <button class="btn btn-dark add-btn mt-3">Add</button>
       
      </form>
    </div>
  </div>
</body>
